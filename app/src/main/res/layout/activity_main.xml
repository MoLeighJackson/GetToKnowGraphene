<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.moleigh.gettoknowgraphene.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Score" />

        <TextView
            android:id="@+id/player_score"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="0" />

        <!--QUESTION ONE BUTTONS-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question #1"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="What is graphene?"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_answer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="showToast"
            android:text="A toxic gas produced by carbon atoms."
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_answer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="showToast"
            android:text="A process through which metal can be softened."
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_answer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addOnePoint"
            android:text="A one-atom-thick sheet of carbon atoms."
            android:textSize="20sp" />


        <!--QUESTION TWO CHECK BOXES-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Question #2"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="What are the names of the scientists who discovered graphene? Select two answers:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkbox_answer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="addPointCheckBox1"
            android:text="Andrei Geim"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/checkbox_answer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="showToast"
            android:text="Grey Knotts"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/checkbox_answer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="addPointCheckBox2"
            android:text="Kostya Noveselov"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/checkbox_answer4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="showToast"
            android:text="Estelle Fanta Swara"
            android:textSize="20sp" />


        <!--QUESTION THREE RADIO BUTTON-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Question #3"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Graphene is produced from:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radiobtn_a1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="addPointRadioBtn"
            android:text="Graphite"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radiobtn_a2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="showToast"
            android:text="Garnet"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radiobtn_a3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="showToast"
            android:text="Gallium"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radiobtn_a4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="showToast"
            android:text="Graphinium"
            android:textSize="20sp" />


        <!--QUESTION Edit Text-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question #4"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginTop="10dp"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:text="This kind of tape can be stuck to graphite in order to create graphene: "
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edit_text_answer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="Enter your answer here. Hint: scotch, masking, electrical, or duct"
            android:inputType="text"
            android:onClick="addPointEditText"
            android:textSize="20sp" />

        <Button
            android:id="@+id/final_score_toast"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_margin="25dp"
            android:onClick="finalScoreToast"
            android:text="Submit" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="For more info about graphene visit: http://www.pbs.org/wgbh/nova/next/tech/graphene/"
            android:textSize="10sp" />

    </LinearLayout>

</ScrollView>